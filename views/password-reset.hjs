{{#setTitleI18n}}password_reset_title{{/setTitleI18n}}

<div class="container content">
	<div class="col-md-6 col-md-push-3 admin-centered" id="reset-password">
		<h2>{{#__}}password_reset{{/__}}</h2>
		<div class="row">
			<form class="form-horizontal" data-toggle="validator" role="form" id="local-reg" action="/pwd_reset" method="post">
                <h4 class="access">{{#__}}password_reset_instructions{{/__}}:</h4>
                <div class="access form-group form-group-sm">
                    <div class="col-xs-12">
                        <input class="form-control" name="email" type="email" value="{{ user.email }}" placeholder="{{#__}}email{{/__}}">
                    </div>
                </div>
                <div class="access">
					<button type="submit" class="col-xs-12 col-sm-4 btn btn-primary btn-lg pull-right">{{#__}}send{{/__}}</button>
				</div>
			</form>
		</div>
	</div>
</div> <!-- /content -->
